@page
@model MMC.WEB.Pages.Participations.IndexModel
@{
    ViewData["Title"] = "Settings";
}


<div class="container-fluid">

    <div class="container-fluid bg-dark py-1 mb-2">
        <h3 class="text-center text-light">Settings</h3>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title title-2 text-dark">Events Participations</h4>
            <hr>

            <form method="post">

                <!-- Table -->
                <div class="d-flex justify-content-center">
                    <div class="table-responsive col-12">
                        <table id="zero_config" class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th class="text-white bg-info">
                                        <span class="h5">Participant ID</span>
                                    </th>
                                    <th class="text-white bg-info">
                                        <span class="h5">Event ID</span>
                                    </th>
                                    <th class="text-white bg-info">
                                        <span class="h5">Date</span>
                                    </th>
                                    <th class="text-white bg-info">
                                        <span class="h5">Approved</span>
                                    </th>
                                    <th class="text-white bg-info d-flex justify-content-end">
                                        <span class="h5">Action</span>
                                    </th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model.JoinEvents)
                                {
                                    string badge = item.IsApproved ? "badge badge-success" : "badge badge-danger";
                                    string disabled = item.IsApproved ? "disabled" : "";
                                    <tr>
                                        <td class="text-dark text-capitalize"><span class="h5">@item.ParticipantId</span></td>
                                        <td class="text-dark text-capitalize"><span class="h5">@item.EventId</span></td>
                                        <td class="text-dark text-capitalize"><span class="h5">@item.ParticipationDate.ToShortDateString()</span></td>
                                        <td class="text-dark text-capitalize"><h4><span class="@badge">@item.IsApproved</span></h4></td>
                                        <td class="text-dark d-flex justify-content-end">
                                            <a asp-route-id="@item.Id" asp-page-handler="Approve" class="text text-white btn btn-info mr-1 @disabled" data-toggle="tooltip" data-placement="left" title="Approve"><i class="bi bi-check-circle-fill"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}