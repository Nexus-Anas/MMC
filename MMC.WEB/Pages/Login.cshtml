@page
@model MMC.WEB.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginLayout";
}


<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container mt-5">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <h3 class="text text-secondary mb-2">MOROCCO MICROSOFT COMMUNITY</h3>
                            <h2>ADMIN LOGIN</h2>
                            @if (Model.Msg != string.Empty)
                            {
                                <div class="alert alert-danger" role="alert">
                                    <p>@Model.Msg</p>
                                </div>
                            }
                        </a>
                    </div>
                    <div class="login-form">
                        <form action="" method="post">
                            <div class="form-group">
                                <label>Username</label>
                                <input asp-for="LUsername" class="au-input au-input--full" type="text"placeholder="enter your username">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input asp-for="LPassword" class="au-input au-input--full" type="password"placeholder="type your password">
                            </div>
                            <button asp-page-handler="Login" class="au-btn au-btn--block au-btn--blue m-b-20">sign in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

